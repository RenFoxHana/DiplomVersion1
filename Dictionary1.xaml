<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ButtonTopMenu">
        <Setter Property="Button.FontSize" Value="20"/>
        <Setter Property="Button.HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Border.BorderThickness" Value="3"/>
        <Setter Property="Button.Background" Value="#C5C5C5" />
    </Style>

    <Style x:Key="ButtonLeftMenu">
        <Setter Property="Button.Margin" Value="0,10,0,10"/>
        <Setter Property="Button.Width" Value="220"/>
        <Setter Property="Button.Height" Value="45"/>
        <Setter Property="Button.FontSize" Value="25"/>
        <Setter Property="Button.HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Border.BorderThickness" Value="3"/>
        <Setter Property="Button.Background" Value="#C5C5C5" />
    </Style>

    <Style x:Key="ButtonJobDataMenu">
        <Setter Property="Button.Margin" Value="10,0,10,0"/>
        <Setter Property="Button.Width" Value="210"/>
        <Setter Property="Button.Height" Value="45"/>
        <Setter Property="Button.FontSize" Value="25"/>
        <Setter Property="Button.HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Border.BorderThickness" Value="3"/>
        <Setter Property="Button.Background" Value="#C5C5C5" />
    </Style>

</ResourceDictionary>